{
  "routePermissions": [
    {
      "path": "/authenticate",
      "crudMethods": {
        "create"  : { "public": true }
      }
    },
    {
      "path": "/user",
      "model": "User",
      "crudMethods": {
        "create"  : { "all": true },
        "read"    : { "public": true }
      }
    },
    {
      "path": "/user/{userId}",
      "model": "User",
      "crudMethods": {
        "read"    : { "public": true },
        "update"  : { "all": true },
        "delete"  : { "all": true }
      }
    },
    {
      "path": "/account",
      "model": "User",
      "crudMethods": {
        "read"    : { "public": true },
        "update"  : { "own": true }
      }
    },
    {
      "path": "/group",
      "model": "Group",
      "crudMethods": {
        "create"  : { "all": true },
        "read"    : { "all": true }
      }
    },
    {
      "path": "/group/{groupId}",
      "model": "Group",
      "crudMethods": {
        "read"    : { "all": true },
        "update"  : { "all": true },
        "delete"  : { "all": true }
      }
    },
    {
      "path": "/forum",
      "model": "Forum",
      "crudMethods": {
        "create"  : { "all": true },
        "read"    : { "public": true }
      }
    },
    {
      "path": "/forum/{forumId}",
      "model": "Forum",
      "crudMethods": {
        "read"    : { "all": true },
        "update"  : { "all": true },
        "delete"  : { "all": true }
      }
    },
    {
      "path": "/forum/{forumId}/thread",
      "model": "Thread",
      "crudMethods": {
        "read"    : { "public": true },
        "create"  : { "own": true, "all": true },
        "delete"  : { "own": true, "all": true }
      }
    },
    {
      "path": "/forum/{forumId}/thread/{threadId}",
      "model": "Thread",
      "crudMethods": {
        "read"    : { "public": true },
        "update"  : { "own": "Thread", "all": true },
        "delete"  : { "own": "Thread", "all": true }
      }
    },
    {
      "path": "/forum/{forumId}/thread/{threadId}/post",
      "model": "Post",
      "crudMethods": {
        "create"  : { "own": true, "all": true },
        "read"    : { "public": true }
      }
    },
    {
      "path": "/forum/{forumId}/thread/{threadId}/post/{postId}",
      "model": "Post",
      "crudMethods": {
        "read"    : { "own": "Post", "all": true },
        "update"  : { "own": "Post", "all": true },
        "delete"  : { "own": "Post", "all": true }
      }
    },
    {
      "path": "/thread",
      "model": "Thread",
      "crudMethods": {
        "read"    : { "all": true },
        "create"  : { "all": true },
        "update"  : { "all": true },
        "create"  : { "all": true }
      }
    },
    {
      "path": "/thread/{threadId}",
      "model": "Thread",
      "crudMethods": {
        "read"    : { "all": true },
        "create"  : { "all": true },
        "update"  : { "all": true },
        "delete"  : { "all": true }
      }
    },
    {
      "path": "/shout",
      "model": "Shout",
      "crudMethods": {
        "read"    : { "public": true },
        "create"  : { "own": true }
      }
    },
    {
      "path": "/shout/{shoutId}",
      "model": "Shout",
      "crudMethods": {
        "update"  : { "own": "Shout" },
        "delete"  : { "own": "Shout", "all": true }
      }
    }
  ]
}
