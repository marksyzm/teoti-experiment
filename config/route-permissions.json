{
  "routePermissions": [
    {
      "path": "/authenticate",
      "model": "user",
      "permissions": {
        "create"  : { "own": [], "all": [], "public": true }
      }
    },
    {
      "path": "/user",
      "permissions": {
        "create"  : { "own": [], "all": ["user"] },
        "read"    : { "own": [], "all": [], "public": true },
        "update"  : { "own": [], "all": [] },
        "delete"  : { "own": [], "all": [] }
      }
    },
    {
      "path": "/user/{userId}",
      "permissions": {
        "create"  : { "own": [], "all": [] },
        "read"    : { "own": [], "all": [], "public": true },
        "update"  : { "own": [], "all": ["user"] },
        "delete"  : { "own": [], "all": ["user"] }
      }
    },
    {
      "path": "/account",
      "permissions": {
        "create"  : { "own": [], "all": [] },
        "read"    : { "own": [], "all": [], "public": true },
        "update"  : { "own": ["user"], "all": [] },
        "delete"  : { "own": [], "all": [] }
      }
    },
    {
      "path": "/group",
      "permissions": {
        "create"  : { "own": [], "all": ["group"] },
        "read"    : { "own": [], "all": ["group"] }
      }
    },
    {
      "path": "/group/{groupId}",
      "permissions": {
        "read"    : { "own": [], "all": ["group"] },
        "update"  : { "own": [], "all": ["group"] },
        "delete"  : { "own": [], "all": ["group"] }
      }
    },
    {
      "path": "/forum",
      "permissions": {
        "create"  : { "own": [], "all": ["forum"] },
        "read"    : { "own": [], "all": [], "public": true }
      }
    },
    {
      "path": "/forum/{forumId}",
      "permissions": {
        "read"    : { "own": [], "all": ["forum"] },
        "update"  : { "own": [], "all": ["forum"] },
        "delete"  : { "own": [], "all": ["forum"] }
      }
    },
    {
      "path": "/forum/{forumId}/thread",
      "permissions": {
        "read"    : { "own": [], "all": [], "public": true },
        "create"  : { "own": ["thread"], "all": ["thread"] },
        "delete"  : { "own": ["thread"], "all": ["thread"] }
      }
    },
    {
      "path": "/forum/{forumId}/thread/{threadId}",
      "permissions": {
        "read"    : { "own": [], "all": [], "public": true },
        "update"  : { "own": ["forum","thread"], "all": ["forum","thread"] },
        "delete"  : { "own": ["forum","thread"], "all": ["forum","thread"] }
      }
    },
    {
      "path": "/forum/{forumId}/thread/{threadId}/post",
      "permissions": {
        "create"  : { "own": ["post"], "all": ["post"] },
        "read"    : { "own": [], "all": [], "public": true }
      }
    },
    {
      "path": "/forum/{forumId}/thread/{threadId}/post/{postId}",
      "permissions": {
        "read"    : { "own": ["forum","thread","post"], "all": ["forum","thread","post"] },
        "update"  : { "own": ["forum","thread","post"], "all": ["forum","thread","post"], "ownership": ["post"] },
        "delete"  : { "own": ["forum","thread","post"], "all": ["forum","thread","post"], "ownership": ["post"] }
      }
    },
    {
      "path": "/thread",
      "permissions": {
        "read"  : { "own": [], "all": ["thread"] },
        "create"  : { "own": [], "all": ["thread"] },
        "update"  : { "own": [], "all": ["thread"] },
        "create"  : { "own": [], "all": ["thread"] }
      }
    },
    {
      "path": "/thread/{threadId}",
      "permissions": {
        "read"  : { "own": [], "all": ["thread"] },
        "create"  : { "own": [], "all": ["thread"] },
        "update"  : { "own": [], "all": ["thread"] },
        "delete"  : { "own": [], "all": ["thread"] }
      }
    },
    {
      "path": "/shout",
      "permissions": {
        "read"  : { "own": [], "all": [], "public": true },
        "create"  : { "own": ["shout"], "all": [] }
      }
    },
    {
      "path": "/shout/{shoutId}",
      "permissions": {
        "update"  : { "own": ["shout"], "all": [] },
        "delete"  : { "own": ["shout"], "all": ["shout"] }
      }
    }
  ]
}
